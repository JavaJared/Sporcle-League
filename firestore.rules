rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /today/{name} {
      allow read: if true;
      allow write: if request.auth != null; // anyone signed in (anonymous ok) can submit
    }
    match /points/{name} {
      allow read: if true;
      allow write: if false; // only Cloud Functions will write
    }
  }
}
